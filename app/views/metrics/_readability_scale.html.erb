<div class="row">
  <div class="col s12 m3">
    <%= metric.value.to_i %>%
  </div>
  <div class="col s12 m9">
    <div id="readability-level-slider-<%= metric.id %>"></div>
  </div>
</div>
<script type="text/javascript">
  var slider = document.getElementById('readability-level-slider-<%= metric.id %>');
  noUiSlider.create(slider, {
   start: [0, <%= metric.value.to_i %>],
   connect: true,
   step: 1,
   orientation: 'horizontal', // 'horizontal' or 'vertical'
   range: {
     'min': 0,
     'max': 100
   }
  });
  slider.setAttribute('disabled', true);
</script>
